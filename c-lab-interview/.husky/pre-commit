# get the list of modified files
files=$(git diff --cached --name-only)

# check if directory is modified

has_changed=false

for file in $files
do
    if [[ $file == *  ]]; then
        # set has_changed flag to true
        has_changed=true
    fi
done

# run linters based on the modified modules

if $has_changed; then
    echo "Running ESLint..."
    npx lint-staged
    yarn lint
fi
